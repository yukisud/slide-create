{
  "name": "slide-exporter",
  "version": "1.0.0",
  "description": "HTML Slide Exporter with accurate rendering",
  "main": "main.js",
  "scripts": {
    "start": "electron . --no-sandbox",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux"
  },
  "build": {
    "appId": "com.slide.exporter",
    "productName": "Slide Exporter",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "../index.html",
      "../app.js",
      "../styles.css",
      "../prompt_spec.txt"
    ],
    "afterSign": "scripts/notarize.js",
    "mac": {
      "target": "dmg",
      "hardenedRuntime": true,
      "entitlements": "entitlements.mac.plist",
      "entitlementsInherit": "entitlements.mac.inherit.plist"
    },
    "win": {
      "target": "portable"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "@electron/notarize": "^2.2.1"
  },
  "dependencies": {
    "jszip": "^3.10.1",
    "pdf-lib": "^1.17.1"
  }
}
